{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, //oppose
    "strict": false, //oppose
    "forceConsistentCasingInFileNames": false, //oppose
    "noEmit": false, //oppose
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/pages": ["./src/pages/*"],
      "@/utils": ["./src/utils/*"],
      "@/layout": ["./src/layout/*"],
      "@/global": ["./src/global/*"],
      "@/styles": ["./src/styles/*"],
      "@/shared": ["./src/shared/*"],
      "@/ui": ["./src/components/ui/*"],
      "@/icons": ["./src/components/icons/*"]
    },
    "strictNullChecks": false //oppose
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
